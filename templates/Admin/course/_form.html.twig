{{ form_start(form) }}

<!-- Title Field -->
<div class="mb-4">
    {{ form_label(form.title, 'Course Title', {'label_attr': {'class': 'block text-lg font-bold mb-2 text-primary-dark'}}) }}
    {{ form_widget(form.title, {'attr': {'class': 'w-full px-4 py-2 bg-primary-white border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500', 'placeholder': 'Enter the course title'}}) }}
    {% if form_errors(form.title) %}
        <div class="text-secondary-red text-sm mt-1">
            {{ form_errors(form.title) }}
        </div>
    {% endif %}
</div>

<!-- Description Field -->
<div class="mb-4">
    {{ form_label(form.description, 'Course Description', {'label_attr': {'class': 'block text-lg font-bold mb-2 text-primary-dark'}}) }}
    {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-2 bg-primary-white border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500', 'placeholder': 'Enter the course description'}}) }}
    {% if form_errors(form.description) %}
        <div class="text-secondary-red text-sm mt-1">
            {{ form_errors(form.description) }}
        </div>
    {% endif %}
</div>

<!-- Image Upload Field -->
<div class="mb-4">
    {{ form_label(form.image, 'Upload Course Image', {'label_attr': {'class': 'block text-lg font-bold mb-2 text-primary-dark'}}) }}
    {{ form_widget(form.image, {'attr': {'class': 'w-full px-4 py-2 bg-primary-white border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
    {% if form_errors(form.image) %}
        <div class="text-secondary-red text-sm mt-1">
            {{ form_errors(form.image) }}
        </div>
    {% endif %}
</div>

<!-- Category Field -->
<div class="mb-4">
    {{ form_label(form.category, 'Select Course Category', {'label_attr': {'class': 'block text-lg font-bold mb-2 text-primary-dark'}}) }}
    {{ form_widget(form.category, {'attr': {'class': 'w-full px-4 py-2 bg-primary-white border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
    {% if form_errors(form.category) %}
        <div class="text-secondary-red text-sm mt-1">
            {{ form_errors(form.category) }}
        </div>
    {% endif %}
</div>

<!-- Submit Button -->
<div class="flex justify-center mt-6">
    <button type="submit" class="bg-primary-blue hover:bg-blue-400 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
        {{ button_label|default('Save') }}
    </button>
</div>

{{ form_end(form) }}
