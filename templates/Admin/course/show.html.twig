{% extends 'base.html.twig' %}
{% block title %}
    Course
{% endblock %}
{% block body %}
    <div class="max-w-6xl mx-auto mt-24 p-6 bg-primary-light_white rounded-lg shadow-lg text-primary-dark">
        <h1 class="text-4xl font-bold mb-8 text-center">
            Course Details
        </h1>
        <div class="overflow-x-auto">
            <table class="min-w-full table-auto bg-primary-white shadow-md rounded-lg">
                <tbody>
                    <tr class="border-b">
                        <th class="p-4 text-left text-primary-dark_blue bg-primary-light_white">
                            Id
                        </th>
                        <td class="p-4">
                            {{ course.id }}
                        </td>
                    </tr>
                    <tr class="border-b">
                        <th class="p-4 text-left text-primary-dark_blue bg-primary-light_white">
                            Title
                        </th>
                        <td class="p-4">
                            {{ course.title }}
                        </td>
                    </tr>
                    <tr class="border-b">
                        <th class="p-4 text-left text-primary-dark_blue bg-primary-light_white">
                            Description
                        </th>
                        <td class="p-4">
                            {{ course.description }}
                        </td>
                    </tr>
                    <tr class="border-b">
                        <th class="p-4 text-left text-primary-dark_blue bg-primary-light_white">
                            Image
                        </th>
                        <td class="p-4">
                            {% if course.image %}
                                <img src="{{ asset('uploads/images/' ~ course.image) }}" alt="{{ course.title }}" class="h-20 rounded-lg">
                            {% else %}
                                No image
                            {% endif %}
                        </td>
                    </tr>
                    <tr class="border-b">
                        <th class="p-4 text-left text-primary-dark_blue bg-primary-light_white">
                            CreatedAt
                        </th>
                        <td class="p-4">
                            {{ course.createdAt ? course.createdAt|date('Y-m-d H:i:s') : '' }}
                        </td>
                    </tr>
                    <tr class="border-b">
                        <th class="p-4 text-left text-primary-dark_blue bg-primary-light_white">
                            UpdatedAt
                        </th>
                        <td class="p-4">
                            {{ course.updatedAt ? course.updatedAt|date('Y-m-d H:i:s') : '' }}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="flex justify-between items-center mt-8">
            <a href="{{ path('app_course_index') }}" class="px-4 py-2">
                Back to list
            </a>
            <div class="flex justify-between items-center">
                <a href="{{ path('app_course_edit', {'id': course.id}) }}" class="px-4 py-2 ">
                    Edit
                </a>
                {{ include('Admin/course/_delete_form.html.twig', {
                'button_label': 'Delete'
            }) }}
            </div>
        </div>
    </div>
{% endblock %}
