{{ form_start(form) }}

<!-- Title Field -->
<div class="mb-4">
    {{ form_label(form.title, 'Lesson Title', {'label_attr': {'class': 'block text-lg font-bold mb-2 text-primary-dark'}}) }}
    {{ form_widget(form.title, {'attr': {'class': 'w-full px-4 py-2 bg-primary-white border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
    {% if form_errors(form.title) %}
        <div class="text-secondary-red text-sm mt-1">
            {{ form_errors(form.title) }}
        </div>
    {% endif %}
</div>

