{% extends 'Admin/base.html.twig' %}

{% block title %}
    Lesson
{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto mt-24 p-6 bg-primary-light_white rounded-lg shadow-lg text-primary-dark">
        <h1 class="text-4xl font-bold mb-8 text-center">
            Lesson Details
        </h1>
        <div class="overflow-x-auto">
            <table class="min-w-full table-auto bg-primary-white shadow-md rounded-lg">
                <tbody>
                    <tr class="border-b">
                        <th class="p-4 text-left text-primary-dark_blue bg-primary-light_white">
                            Id
                        </th>
                        <td class="p-4">
                            {{ lesson.id }}
                        </td>
                    </tr>
                    <tr class="border-b">
                        <th class="p-4 text-left text-primary-dark_blue bg-primary-light_white">
                            Title
                        </th>
                        <td class="p-4">
                            {{ lesson.title }}
                        </td>
                    </tr>
                    <tr class="border-b">
                        <th class="p-4 text-left text-primary-dark_blue bg-primary-light_white">
                            Description
                        </th>
                        <td class="p-4">
                            {{ lesson.description }}
                        </td>
                    </tr>
                    <tr class="border-b">
                        <th class="p-4 text-left text-primary-dark_blue bg-primary-light_white">
                            Video
                        </th>
                        <td class="p-4">
                            {% if lesson.video %}
                                <video width="320" height="240" controls class="rounded-lg">
                                    <source src="{{ asset('uploads/videos/' ~ lesson.video) }}" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                            {% else %}
                                No video
                            {% endif %}
                        </td>
                    </tr>
                    <tr class="border-b">
                        <th class="p-4 text-left text-primary-dark_blue bg-primary-light_white">
                            CreatedAt
                        </th>
                        <td class="p-4">
                            {{ lesson.createdAt ? lesson.createdAt|date('Y-m-d H:i:s') : '' }}
                        </td>
                    </tr>
                    <tr class="border-b">
                        <th class="p-4 text-left text-primary-dark_blue bg-primary-light_white">
                            UpdatedAt
                        </th>
                        <td class="p-4">
                            {{ lesson.updatedAt ? lesson.updatedAt|date('Y-m-d H:i:s') : '' }}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="flex justify-between items-center mt-8">
            <a href="{{ path('app_lesson_admin_index') }}" class="px-4 py-2">
                Back to list
            </a>
            <div class="flex justify-between items-center">
                <a href="{{ path('app_lesson_admin_edit', {'id': lesson.id}) }}" class="px-4 py-2">
                    Edit
                </a>
                {{ include('Admin/lesson_admin/_delete_form.html.twig', {
                    'button_label': 'Delete'
                }) }}
            </div>
        </div>
    </div>
{% endblock %}
