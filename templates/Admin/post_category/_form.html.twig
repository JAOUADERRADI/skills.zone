{{ form_start(form) }}
<!-- Name Field -->
<div class="mb-4">
    {{ form_label(form.name, 'Post Category Name', {'label_attr': {'class': 'block text-lg font-bold mb-2 text-primary-dark'}}
    ) }}
    {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-2 bg-primary-white border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}
    ) }}
    {% if form_errors(form.name) %}
        <div class="text-secondary-red text-sm mt-1">
            {{ form_errors(form.name) }}
        </div>
    {% endif %}
</div>
<!-- Submit Button -->
<div class="flex justify-center mt-6">
    <button type="submit" class="bg-primary-blue hover:bg-blue-400 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
        {{ button_label|default('Save') }}
    </button>
</div>
{{ form_end(form) }}
