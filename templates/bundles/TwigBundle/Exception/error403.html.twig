{% extends 'base.html.twig' %}

{% block title %}Access Denied{% endblock %}

{% block body %}
    <div class="flex flex-col lg:flex-row items-center justify-center h-[500px] px-4 md:px-0">
        <div class="text-center lg:text-left lg:mr-8">
            <h1 class="text-4xl md:text-6xl font-bold text-primary-dark mb-6">403 - Forbidden</h1>
            <p class="text-xl md:text-2xl text-secondary-dark mb-4">Access Denied.</p>
            <p class="text-sm md:text-base mb-4 mt-4">You do not have the necessary permissions to view this page.</p>
            <p class="text-sm md:text-base mb-4">If you think this is a mistake, please contact the administrator.</p>
            <a href="{{ path('app_home') }}" class="button button--primary mt-10">
                Go back to Homepage
            </a>
        </div>
        <div class="w-64 md:w-80 lg:w-96 mt-6 lg:mt-0">
            <img src="{{ asset('uploads/images/icons/403.svg') }}" alt="Access Denied" class="w-full h-auto">
        </div>
    </div>
{% endblock %}
