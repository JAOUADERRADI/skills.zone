{% extends 'base.html.twig' %}

{% block title %}Access Denied{% endblock %}

{% block body %}
    <div class="flex items-center justify-center h-[500px]">
        <div>
            <h1 class="text-6xl font-bold text-primary-dark mb-6">403 - Forbidden</h1>
            <p class="text-2xl text-secondary-dark mb-4">Access Denied.</p>
            <p class="mb-4 mt-4">You do not have the necessary permissions to view this page.</p>
            <p class="mb-4">If you think this is a mistake, please contact the administrator.</p>
            <a href="{{ path('app_home') }}" class="button button--primary mt-10">
                Go back to Homepage
            </a>
        </div>
        <div class="w-96">
            <img src="{{ asset('uploads/images/icons/403.svg') }}" alt="Access Denied" >
        </div>
    </div>
{% endblock %}
