{% extends 'base.html.twig' %}

{% block title %}Page Not Found{% endblock %}

{% block body %}
    <div class="flex flex-col lg:flex-row items-center justify-center h-[500px] px-4 md:px-0">
        <div class="text-center lg:text-left lg:mr-8">
            <p class="text-4xl md:text-6xl font-bold text-primary-dark mb-6">Ooops...</p>
            <h1 class="text-xl md:text-2xl text-secondary-dark mb-4">404 - Page not found.</h1>
            <p class="text-sm md:text-base mb-4 mt-4">This page doesn't exist or was removed! We suggest you go back to the homepage.</p>
            <a href="{{ path('app_home') }}" class="button button--primary mt-10">
                Go back to Homepage
            </a>
        </div>
        <div class="w-64 md:w-80 lg:w-96 mt-6 lg:mt-0">
            <img src="{{ asset('uploads/images/icons/404.svg') }}" alt="Page not found" class="w-full h-auto">
        </div>
    </div>
{% endblock %}
