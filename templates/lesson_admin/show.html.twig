{% extends 'base.html.twig' %}

{% block title %}Lesson{% endblock %}

{% block body %}
    <h1>Lesson</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lesson.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ lesson.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ lesson.description }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ lesson.video }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ lesson.createdAt ? lesson.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ lesson.updatedAt ? lesson.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_lesson_admin_index') }}">back to list</a>

    <a href="{{ path('app_lesson_admin_edit', {'id': lesson.id}) }}">edit</a>

    {{ include('lesson_admin/_delete_form.html.twig') }}
{% endblock %}
